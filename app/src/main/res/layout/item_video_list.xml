<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relvideolist"
        android:layout_width="470px"
        android:layout_height="484px">

        <ImageView
            android:id="@+id/ivthumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/reltime"
                android:layout_width="144px"
                android:layout_height="154px"
                android:background="@drawable/time_round"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivicon"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/video_icon" />

                <TextView
                    android:id="@+id/tvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:paddingTop="70px"
                    android:text="share"
                    android:textColor="#000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivplay"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_centerInParent="true"
                android:src="@drawable/play_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/video_frame" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

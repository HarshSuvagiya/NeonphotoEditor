<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    <include layout="@layout/topheader"-->
<!--        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:onClick="back"
            android:src="@drawable/back_unpressed" />

        <TextView
            android:id="@+id/my_header_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/ivoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:onClick="option"
            android:src="@drawable/done_unpressed"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.theartofdev.edmodo.cropper.CropImageView
                android:id="@+id/civ"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linearbottom"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginBottom="50px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/ivfh"
                    android:layout_width="139px"
                    android:layout_height="139px"
                    android:onClick="flipHorizontal"
                    android:src="@drawable/flip_l" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.5" />

                <ImageView
                    android:id="@+id/ivfv"
                    android:layout_width="139px"
                    android:layout_height="139px"
                    android:onClick="flipVertical"
                    android:src="@drawable/flip_r" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.5" />

                <ImageView
                    android:id="@+id/ivrl"
                    android:layout_width="139px"
                    android:layout_height="139px"
                    android:onClick="rotateLeft"
                    android:src="@drawable/rotate_l" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.5" />

                <ImageView
                    android:id="@+id/ivrr"
                    android:layout_width="139px"
                    android:layout_height="139px"
                    android:onClick="rotateRight"
                    android:src="@drawable/rotate_r" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relpbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:onClick="nothing"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
